server {
    listen ${NGINX_PORT} default_server;
    server_name ${NGINX_HOST};

    charset utf-8;
    server_tokens off;

    root /var/www/static;
    index index.html;

    location ~* ^/auth1/(login|logout|refresh|callback)(.*)$ {
        proxy_pass ${APP};
    }
    location ~* ^/conf(.*)$ {
        proxy_pass ${APP};
    }
    location ~* ^/order(.*)$ {
        proxy_pass ${APP};
    }
}
